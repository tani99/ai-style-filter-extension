{
  "manifest_version": 3,
  "name": "AI Style-Based Shopping Filter + Virtual Try-On",
  "version": "1.0.0",
  "description": "Use Chrome's built-in AI to create a personal style profile and filter shopping pages to show items that match your aesthetic with virtual try-on.",

  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],

  "host_permissions": [
    "*://*.zara.com/*",
    "*://*.hm.com/*",
    "*://*.nike.com/*",
    "https://*.firebaseio.com/*",
    "https://*.googleapis.com/*",
    "https://firestore.googleapis.com/*",
    "https://identitytoolkit.googleapis.com/*",
    "https://securetoken.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.zara.com/*",
        "*://*.hm.com/*",
        "*://*.nike.com/*"
      ],
      "js": ["content/content.generated.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AI Style Filter"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [{
    "resources": [
      "content/styles/FilterStyles.css"
    ],
    "matches": [
      "*://*.zara.com/*",
      "*://*.hm.com/*",
      "*://*.nike.com/*"
    ]
  }]
}